<!doctype html>
<html class="light <%= random_color %>">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="apple-touch-icon" href="<%= asset_path(:images, data.my.picture)%>" />
    <%= favicon_tag data.my.favicon %>

    <title><%= current_page.data.title || "Pedro Chambino" %></title>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>

    <%= yield_content :head %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
